<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/list_tv_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/user_default"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/list_iv_profile"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:maxWidth="140dp"
        android:textStyle="bold"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/list_tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="@string/user_default"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/list_tv_displayName"
        android:layout_alignBaseline="@id/list_tv_displayName"
        android:layout_marginStart="10dp"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:ellipsize="end" />


    <TextView
        android:id="@+id/list_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/list_tv_userName"
        android:layout_alignBaseline="@id/list_tv_displayName"
        android:layout_marginStart="10dp"
        android:maxWidth="100dp"
        android:textSize="13sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/list_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/list_iv_profile"
        android:layout_below="@+id/list_tv_displayName"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end" />


</RelativeLayout>