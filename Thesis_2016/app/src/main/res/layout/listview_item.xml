<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/swipe1"
            android:contentDescription="@string/swipe1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_details_white_36dp"
            android:background="@color/swipe1"

            />
        <ImageButton
            android:id="@+id/swipe2"
            android:contentDescription="@string/swipe2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete_white_36dp"
            android:background="@color/swipe2"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10">

        <TextView
            android:id="@+id/swipe3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/swipe1"
            android:background="@color/swipe1"
            android:textSize="17sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/primaryText"
            android:textStyle="bold"
            android:maxLines="1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:textSize="12sp"
            android:textColor="@color/primaryText"/>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>