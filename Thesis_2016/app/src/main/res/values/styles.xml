<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryDark">@color/notificationBarColor</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />


    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:background">@color/actionBarColor</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="colorAccent">@color/highlight</item>
    </style>

</resources>
